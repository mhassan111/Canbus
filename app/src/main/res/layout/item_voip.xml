<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ItemWhatsAppVoip">

        <import type="com.im.bin.appUtils.DataBindingConverter"></import>

        <variable
            name="voip"
            type="com.im.bin.db.entities.VoipCall" />

        <variable
            name="viewModel"
            type="com.im.bin.viewModel.WhatsAppVoipViewModel" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/voipLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingTop="20dp"
            android:paddingEnd="6dp"
            android:paddingBottom="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/menu_layout"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.9">

                <com.im.bin.customViews.RobotoMediumTextView
                    android:id="@+id/voip_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="start|center"
                    android:text="@{DataBindingConverter.getVoipCallIcon(context, voip.voipDirection)}"
                    android:textColor="@color/colorPrimary"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <com.im.bin.customViews.RobotoMediumTextView
                    android:id="@+id/voip_name"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="12dp"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:text="@{voip.voipName}"
                    android:textColor="@android:color/black"
                    android:textSize="19sp"
                    app:layout_constraintEnd_toStartOf="@+id/voip_duration"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/voip_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.im.bin.customViews.RobotoLightTextView
                    android:id="@+id/voip_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:text="@{voip.voipDateTime}"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/voip_icon"
                    app:layout_constraintTop_toBottomOf="@+id/voip_name" />

                <com.im.bin.customViews.RobotoLightTextView
                    android:id="@+id/voip_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:gravity="center"
                    android:text="@{DataBindingConverter.convertLongToString(voip.voipDuration)}"
                    android:textColor="@android:color/black"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/menu_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.1">

                <ImageView
                    android:id="@+id/option_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_more_vert_black_24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>