<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ItemWhatsAppVideo">

        <variable
            name="video"
            type="com.im.bin.db.entities.WhatsAppMedia" />

        <variable
            name="viewModel"
            type="com.im.bin.viewModel.WhatsAppPhotosViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/videoLayout"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{()->viewModel.selectWhatsAppMedia(video)}"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="185dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/gradient_background">

                    <com.im.bin.customViews.RobotoMediumTextView
                        android:id="@+id/date"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="3dp"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:maxLines="2"
                        android:text="@{video.mediaDate}"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />
                </LinearLayout>

                <com.im.bin.customViews.RobotoMediumTextView
                    android:id="@+id/play_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/fa_play"
                    android:textColor="@color/colorWhite"
                    android:textSize="40sp" />
            </RelativeLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</layout>