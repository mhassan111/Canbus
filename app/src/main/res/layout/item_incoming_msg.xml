<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="imMessage"
            type="com.im.bin.models.IMMessage" />

        <variable
            name="viewModel"
            type="com.im.bin.viewModel.ChatConversationViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/incoming_msg_layout"
        android:background="@drawable/rounded_rectangle_incoming"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp">

        <com.im.bin.customViews.RobotoMediumTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="start"
            android:text="@{imMessage.message}"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.im.bin.customViews.RobotoLightTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:gravity="start"
            android:textSize="11sp"
            android:text="@{imMessage.messageDatetime}"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>