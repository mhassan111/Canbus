<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.im.bin.viewModel.SignUpViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        tools:ignore="MissingPrefix">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="30dp"
                    android:layout_gravity="top">

                    <ImageView
                        android:id="@+id/closeButton"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_close_black_24dp"></ImageView>

                    <com.im.bin.customViews.RobotoBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_toEndOf="@+id/closeButton"
                        android:text="@string/sign_up"
                        android:textColor="@color/colorWhite"
                        android:textSize="21sp"></com.im.bin.customViews.RobotoBoldTextView>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <com.im.bin.customViews.RobotoMediumEditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_email"
                        android:drawableStart="@drawable/ic_person_black_24dp"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:hint="@string/email_hint_text"
                        android:inputType="text"
                        android:padding="15dp"
                        android:scrollHorizontally="true"
                        android:text="@={viewModel.email}"
                        android:textColor="@color/colorWhite"
                        android:textColorHighlight="@color/colorWhite"
                        android:textColorHint="@color/colorWhite" />

                    <com.im.bin.customViews.RobotoMediumEditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_email"
                        android:drawableStart="@drawable/ic_lock_black_24dp"
                        android:drawablePadding="10dp"
                        android:ellipsize="end"
                        android:hint="@string/password_hint_text"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:scrollHorizontally="true"
                        android:text="@={viewModel.password}"
                        android:textColor="@color/colorWhite"
                        android:textColorHighlight="@color/colorWhite"
                        android:textColorHint="@color/colorWhite" />

                    <com.im.bin.customViews.RobotoMediumButton
                        android:id="@+id/signUP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_login"
                        android:maxLines="1"
                        android:onClick="@{(v) -> viewModel.onSignUpClick(v)}"
                        android:padding="15dp"
                        android:shadowColor="@android:color/transparent"
                        android:text="@string/sign_up_text"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp" />

                    <ProgressBar
                        android:id="@+id/progress_par"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:visibility="@{viewModel.loadProgressBar ? View.VISIBLE : View.GONE}"></ProgressBar>
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>